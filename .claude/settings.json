{
  "$schema": "https://claude.ai/schemas/settings.json",
  "permissions": {
    "allow": [
      "Bash(black *)",
      "Bash(bun *)",
      "Bash(bunx *)",
      "Bash(bunx playwright *)",
      "Bash(cargo *)",
      "Bash(code *)",
      "Bash(cp *)",
      "Bash(crx3 *)",
      "Bash(cursor *)",
      "Bash(eslint *)",
      "Bash(gh *)",
      "Bash(git *)",
      "Bash(git add *)",
      "Bash(git commit *)",
      "Bash(git pull *)",
      "Bash(git push *)",
      "Bash(git rebase *)",
      "Bash(go *)",
      "Bash(jest *)",
      "Bash(ls *)",
      "Bash(mkdir *)",
      "Bash(mv *)",
      "Bash(mypy *)",
      "Bash(node *)",
      "Bash(npm *)",
      "Bash(npx *)",
      "Bash(ollama *)",
      "Bash(pip *)",
      "Bash(pnpm *)",
      "Bash(prettier *)",
      "Bash(pyinstaller *)",
      "Bash(pytest *)",
      "Bash(python *)",
      "Bash(rm *.pyc)",
      "Bash(rm -r *)",
      "Bash(rm -rf .next*)",
      "Bash(rm -rf __pycache__*)",
      "Bash(rm -rf build*)",
      "Bash(rm -rf dist*)",
      "Bash(rm -rf node_modules*)",
      "Bash(rm bun.lockb)",
      "Bash(ruff *)",
      "Bash(rustc *)",
      "Bash(sed *)",
      "Bash(tauri *)",
      "Bash(tsc *)",
      "Bash(uv *)",
      "Bash(vitest *)",
      "Bash(web-ext *)",
      "Bash(wrangler *)",
      "Bash(yarn *)",
      "Edit",
      "Glob",
      "Grep",
      "NotebookEdit",
      "Read(*)",
      "Task",
      "TodoWrite",
      "WebFetch",
      "WebSearch",
      "Write(*)",
      "Bash(antigravity *)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf /*)",
      "Bash(> /dev/sda)",
      "Bash(:(){:|:&};:)",
      "Bash(mkfs*)",
      "Bash(dd if=*)"
    ]
  },
  "env": {
    "LANG": "ja_JP.UTF-8",
    "BUN_INSTALL": "/c/Users/Owner/.bun"
  },
  "statusLine": {
    "type": "command",
    "command": "bun x ccusage statusline"
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "compact",
        "hooks": [
          {
            "type": "command",
            "command": "echo '{\"systemMessage\": \"【最重要リマインド】1.Antigravity連携必須 2.bnmp使用(npm禁止) 3.JSスクリプト書き込み 4.Gemini相談\"}'"
          }
        ]
      },
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "echo '{\"systemMessage\": \"【ルール確認】1.Antigravity+Claude Code連携 2.bnmp使用 3.JSスクリプト書き込み 4.Gemini相談 5.日本語回答\"}'"
          }
        ]
      },
      {
        "matcher": "resume",
        "hooks": [
          {
            "type": "command",
            "command": "echo '{\"systemMessage\": \"【ルール確認】Antigravity連携、bnmp使用、JSスクリプト書き込み、Gemini相談必須\"}'"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'Success'"
          }
        ]
      }
    ]
  }
}